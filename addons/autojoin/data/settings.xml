<?xml version="1.1" ?>
<settings>
	<global>
		<autodecline>false</autodecline> <!-- If set to true, will automatically decline invites from people on the blacklist. This applies to both modes. -->
		<blacklist />                    <!-- When in blacklist mode, it will accept all invites except from these people. Unrelated to the ingame blacklist feature. -->
		<mode>whitelist</mode>           <!-- One of two modes: whitelist or blacklist mode. -->
		<whitelist />                    <!-- When in whitelist mode, it will only accept invites from these people. -->
	</global>
</settings>

